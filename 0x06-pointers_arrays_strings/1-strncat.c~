#include "main.h"
/**
 * _islower - Check description
 * Description: It tells if lower case
 * @src: - An input parameter
 * @dest: - d by a new line
 * @n: - input n
 * Return: char
 */
char *_strncat(char *dest, char *src, int n)
{
	int a;
	int b;
	int c;
	char *retp;

	for (a = 0; src[a] != '\0'; a++)
	{

	}
	for (b = 0; dest[b] != '\0'; b++)
	{

	}
	if (n <= a)
	{
		a = n;
	}
	for (c = 0; c < a; c++)
	{
		dest[b + c] = src[c];
	}
	*(dest + b + a) = '\0';
	retp = dest;
	return (retp);
}
