#include <stdlib.h>
#include <string.h>
#include <stdio.h>
#include "hash_tables.h"

/**
 * main - check the code
 *
 * Return: Always EXIT_SUCCESS.
 */
int hash_table_set(hash_table_t *ht, const char *key, const char *value)
{
	unsigned long int hs;
	hash_node_t *hn = NULL;

	if (strlen(key) == 0 || key == NULL)
		return (0);
	if (value == NULL)
		return (0);
	hs = key_index((unsigned char *)key, ht->size);
	hn = malloc(sizeof(hash_node_t *));
	if (hn == NULL)
		return (0);
	hn->key = malloc(sizeof(char *));
	if (hn->key == NULL)
		return (0);
	hn->value = malloc(sizeof(char *));
	if (hn->value == NULL)
		return (0);
	hn->next = NULL;
	hn->key = (char *)key;
	hn->value = (char *)value;
	if (ht->array[hs] == NULL)
	{
		ht->array[hs] = hn;
		return (1);
	}
	else
	{
		ht->array[hs]->next = hn;
		return (1);
	}
}
